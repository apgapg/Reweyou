<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardUseCompatPadding="false"
    card_view:contentPadding="2dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp"
    android:id="@+id/cv"
    card_view:cardBackgroundColor="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/screen">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Relative"
            android:background="#fff">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/profilepic"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:id="@+id/from"
                android:text="Varun Pandey"
                android:layout_toRightOf="@id/profilepic"
                android:textColor="#000"
                android:layout_marginBottom="0.5dp"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:id="@+id/date"
                android:layout_toRightOf="@id/profilepic"
                android:layout_below="@id/from"
                android:text="Date"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:textSize="10sp"
                android:textColor="#80000000"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overflow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_dots" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/divider"
                android:background="#f4f4f4"
                android:layout_below="@id/date"
                android:layout_marginBottom="2dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head"
                android:layout_below="@id/divider"
                android:paddingLeft="3dp"
                android:autoLink="web"
                android:paddingRight="3dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Who"
                android:layout_below="@id/head"
                android:paddingLeft="3dp"
                android:autoLink="web"
                android:paddingRight="3dp"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actions"
                android:layout_below="@id/Who">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:id="@+id/place"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:text="posted by"
                    android:textColor="#80000000"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="2dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="&#xf041;"
                    android:textColor="#80000000"
                    android:textSize="12sp"
                    android:layout_toLeftOf="@id/place"
                    android:id="@+id/locationicon"
                    android:paddingRight="2dp"
                    android:paddingTop="4dp" />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image"
                android:scaleType="centerInside"
                android:layout_below="@id/actions"
                android:cropToPadding="true"
                android:layout_centerHorizontal="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top"
                android:layout_below="@id/image"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:id="@+id/source"
                    android:text="From"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="1dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:textColor="#80000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:id="@+id/reviews"
                    android:layout_weight="2"
                    android:paddingRight="5dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="1dp"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:layout_marginRight="6dp"
                    android:textColor="#80000000" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/divider2"
                android:background="#f4f4f4"
                android:layout_below="@id/top"
                android:layout_marginBottom="2dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider2"
                android:layout_marginTop="1dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/upvote"
                    android:text="Upvote"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:textColor="#9c9c9c"
                    android:textSize="14sp"
                    android:layout_marginRight="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text=" &#xf01b;"
                    android:paddingRight="5dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="1dp"
                    android:textSize="25sp"
                    android:layout_toLeftOf="@id/upvote"
                    android:textColor="#9c9c9c"
                    android:id="@+id/upicon"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="&#xf040;"
                    android:paddingRight="3dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:textSize="19sp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#9c9c9c"
                    android:id="@+id/reacticon"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/app"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:text="React"
                    android:layout_toRightOf="@id/reacticon"
                    android:layout_weight="1"
                    android:textColor="#9c9c9c"
                    android:textSize="14sp"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>