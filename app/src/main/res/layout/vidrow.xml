<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/feedbackground">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cv"
        android:background="#ccc">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Relative"
                android:background="#fff"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:layout_alignParentLeft="true"
                    android:text="Date"
                    android:textColor="#062235"
                    android:textSize="10dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/image"
                    android:layout_below="@id/date"
                    android:src="@drawable/app_logo"
                    android:layout_centerHorizontal="true"
                    android:background="#ccc"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/videohint"
                    android:id="@+id/vidicon"
                    android:textSize="21sp"
                    android:textColor="@color/transparent_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Who"
                    android:layout_below="@+id/image"
                    android:text="This is Headline"
                    android:paddingLeft="3dp"
                    android:autoLink="web"
                    android:paddingRight="3dp"
                    android:textColor="#062235"
                    android:textSize="16sp"
                    android:layout_marginTop="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/from"
                    android:text="posted by"
                    android:layout_below="@id/Who"
                    android:layout_alignParentRight="true"
                    android:textColor="#062235"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/tag"
                    android:text="Category"
                    android:textColor="#fff"
                    android:layout_below="@id/place" />


                <TextView
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:id="@+id/reviews"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/roundbutton"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@id/Who"
                    android:id="@+id/place"
                    android:text="Location"
                    android:textColor="#062235"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/Who"
                    android:layout_marginTop="3dp"
                    android:background="#f4f4f4" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/from"
                    android:id="@+id/share"
                    android:layout_alignParentRight="false"
                    android:text="Share"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:background="@drawable/roundbutton"
                    android:paddingTop="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="2dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/app"
                android:layout_below="@id/Relative"
                android:background="#f4f4f4"
                android:gravity="center_horizontal"
                android:text="Download Reweyou App and Start Reporting"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:paddingTop="1dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>